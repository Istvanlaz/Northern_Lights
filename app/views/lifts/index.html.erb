          <%= link_to "Back", pages_path %>
        </div>
      </div>
    </div>

  <% elsif @lifts.count >= 10 %>

    <div class="list-cont-big">
      <div class="full_title_lift">
        <div class="lift_title effect3d">
          <strong>NOS SUPER-MARIOS!  üçÑ üåü</strong>
        </div>
        <div class="lift_subtitle">
