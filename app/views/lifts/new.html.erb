<div class="lift-cont">
  <div class="lift-bg">
    <%= image_tag("Background_Landing_Stars.jpg", alt: "A sky full of Stars") %>
  </div>
  <div class="lift-subcont">
    <div class=" bob-new">
      <h5><strong>ON THE ROAD AGAIN ! <br> MERCI !</strong></h5>
      <%= simple_form_for [@lift] do |f| %>
        <div class="form-row">
          <div class="form-group col-sm-6">
            <%= f.input :first_name, class: 'form_inputs', placeholder: 'Emile' %>
          </div>
          <div class="form-group col-sm-6">
            <%= f.input :family_name, class: 'form_inputs', placeholder: 'de Chastelier' %>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-sm-6">
            <%= f.input :places_available, class: 'form_inputs', placeholder: '3' %>
          </div>
          <div class="form-group col-sm-6">
            <%= f.input :contact, class: 'form_inputs', placeholder: 'phone or email' %>
          </div>
        </div>
        <%= f.input :rallying_point, class: 'form_inputs', placeholder: 'Rondpoint de Montgomery' %>
        <div class="form-row">
          <div class="form-group col-sm-6">
            <%= f.input :departure, class: 'form_inputs' %>
          </div>
          <div class="form-group col-sm-6">
            <%= f.input :return, class: 'form_inputs' %>
          </div>
        </div>
        <div class="form-group col-12">
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>




