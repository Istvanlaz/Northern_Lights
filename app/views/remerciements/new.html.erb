<div class="reponse-cont">
  <div class="reponse-bg">
    <%= image_tag("Background_Landing_Stars.jpg", alt: "A sky full of Stars") %>
  </div>
  <div class="reponse-subcont">
    <div class="reponse-new">
      <div class="container">
        <h5><strong>REMERCIEMENTS</strong></h5>
        <form action="/remerciements" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="form-row">
            <div class="form-group form_inputs col-sm-6">
              <label for="first_name">PRÉNOM *</label>
              <input type="text" name="remerciement[first_name]" class="form-control form-control-lg"
                     id="first_name" placeholder="Astrid" autofocus="true" required>
            </div>
            <div class="form-group form_inputs col-sm-6">
              <label for="family_name">NOM DE FAMILLE *</label>
              <input type="text" name="remerciement[family_name]" class="form-control form-control-lg"
                     id="family_name" placeholder="Monstens" required>
            </div>
          </div>

          <div class="form-center">
            <div class="form-group form_inputs col-lg-12">
              <label for="message">MESSAGE *</label>
              <textarea class="form-control" id="message-remerciement" name="remerciement[message]"  rows="10" placeholder="Un message serait fortment apprécié." required></textarea>
            </div>
          </div>
          <div class="form-row mt-3">
            <div class="col-12">
              <button type="submit" class="btn btn-lift">ENVOYER</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
