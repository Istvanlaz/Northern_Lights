<div class="reponse-cont">
  <div class="reponse-bg">
    <%= image_tag("Background_Landing_Stars.jpg", alt: "A sky full of Stars") %>
  </div>
  <div class="reponse-subcont">
    <div class="reponse-new">
      <div class="container">
        <h5><strong>RÉPONSE</strong></h5>
        <form action="repondre" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="form-row">
            <div class="form-group form_inputs col-sm-6">
              <label for="first_name">PRÉNOM *</label>
              <input type="text" name="reponse[first_name]" class="form-control form-control-lg"
                     id="first_name" placeholder="Eline" autofocus="true" required>
            </div>
            <div class="form-group form_inputs col-sm-6">
              <label for="family_name">NOM DE FAMILLE *</label>
              <input type="text" name="reponse[family_name]" class="form-control form-control-lg"
                     id="family_name" placeholder="de Ghellinck d'Elseghem" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group form_inputs col-sm-6">
              <label for="contact">CONTACT *</label>
              <input type="text" name="reponse[contact]" class="form-control form-control-lg"
                     id="contact" placeholder="email" required>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-2">Végétarien(ne)</div>
            <div class="col-sm-10">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck1">
                <label class="form-check-label" for="gridCheck1">
                  Oui
                </label>
              </div>
            </div>
          </div>
          <div class="form-center">
            <div class="form-group form_inputs col-sm-6">
              <label for="message">MESSAGE *</label>
              <textarea class="form-control" id="message-reponse" rows="3" placeholder="Un message serait fortment apprécié."></textarea> <!-- type="text" name="reponse[message]" class="form-control form-control-lg"
                     id="message" placeholder="Un message serait formtement apprécié." required>
            </div> -->
          </div>
          <div class="form-row mt-3">
            <div class="col-12">
              <button type="submit" class="btn btn-lift">ENVOYER</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
